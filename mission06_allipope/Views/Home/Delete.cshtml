@{
    ViewData["Title"] = "Delete Movie";
}

@model MovieResponse

<h2>Are you sure you want to delete the record for @Model.Title?</h2>

<form method="post" asp-controller="Home" asp-action="Delete" class="btn btn-primary">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>
